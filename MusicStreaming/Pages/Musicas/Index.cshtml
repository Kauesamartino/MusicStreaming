@page
@model MusicStreaming.Pages.Musicas.IndexModel

<h1>🎵 Músicas</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Álbum</th>
            <th>Duração</th>
            <th>Gênero</th>
            <th>Artista</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var musica in Model.Musicas)
        {
            <tr>
                <td>@musica.Titulo</td>
                <td>@musica.AlbumId</td>
                <td>@musica.DuracaoSegundos</td>
                <td>@musica.Genero</td>
                <td>@(musica.Artista != null ? musica.Artista.Nome + " " + musica.Artista.Sobrenome : "-")</td>
            </tr>
        }
    </tbody>
</table>
