@model IEnumerable<MusicStreaming.Models.Artista>

@{
    ViewData["Title"] = "Artistas";
}

<h1>🎤 Lista de Artistas</h1>

<!-- Pesquisa -->
<form asp-action="Index" method="get" class="mb-3">
    <input type="text" name="search" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Pesquisar artista..." />
</form>

<!-- Botão Novo -->
<p>
    <a class="btn btn-primary" asp-controller="Artistas" asp-action="Create">Novo Artista</a>
</p>

<!-- Tabela de artistas -->
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>Músicas</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var artista in Model)
        {
            <tr>
                <td>@artista.Nome</td>
                <td>@artista.Sobrenome</td>
                <td>@artista.Musicas.Count</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@artista.Id">Detalhes</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@artista.Id">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@artista.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
