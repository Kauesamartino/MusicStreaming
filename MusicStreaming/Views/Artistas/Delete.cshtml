@model MusicStreaming.Models.Artista

@{
    ViewData["Title"] = "Excluir Artista";
}

<h1>Excluir Artista</h1>

<h3>Tem certeza que deseja excluir este artista?</h3>
<div>
    <h4>@Model.Nome @Model.Sobrenome</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>
        <dt class="col-sm-2">Sobrenome</dt>
        <dd class="col-sm-10">@Model.Sobrenome</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
