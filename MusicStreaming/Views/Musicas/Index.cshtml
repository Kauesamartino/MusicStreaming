@model IEnumerable<MusicStreaming.Models.Musica>

@{
    ViewData["Title"] = "Músicas";
}

<h1>🎵 Lista de Músicas</h1>

<!-- Pesquisa -->
<form asp-action="Index" method="get" class="mb-3">
    <input type="text" name="search" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Pesquisar música..." />
</form>

<!-- Botão Novo -->
<p>
    <a class="btn btn-primary" asp-controller="Musicas" asp-action="Create">Nova Música</a>
</p>

<!-- Tabela de músicas -->
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Título</th>
            <th>Gênero</th>
            <th>Duração (min)</th>
            <th>Data de Lançamento</th>
            <th>Artista</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var musica in Model)
        {
            <tr>
                <td>@musica.Titulo</td>
                <td>@musica.Genero</td>
                <td>@musica.Duracao</td>
                <td>@musica.DataLancamento.ToString("dd/MM/yyyy")</td>
                <td>@musica.Artista?.Nome @musica.Artista?.Sobrenome</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@musica.Id">Detalhes</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@musica.Id">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@musica.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
