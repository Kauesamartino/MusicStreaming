@model MusicStreaming.Models.Musica

@{
    ViewData["Title"] = "Excluir Música";
}

<h1>Excluir Música</h1>

<h3>Tem certeza que deseja excluir esta música?</h3>
<div>
    <h4>@Model.Titulo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Gênero</dt>
        <dd class="col-sm-10">@Model.Genero</dd>
        <dt class="col-sm-2">Artista</dt>
        <dd class="col-sm-10">@Model.Artista?.Nome</dd>
        <dt class="col-sm-2">Data de Lançamento</dt>
        <dd class="col-sm-10">@Model.DataLancamento.ToShortDateString()</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
